{
    "titleProperty": "title",
    "name": "Publications",
    "description": "Publications",
    "category": "GESDISC",
    "workflow": "Edit-Review-Publish",
    "icon": {
        "name": "fa-book",
        "color": "#000000"
    },
    "schema": {
        "$schema": "http://json-schema.org/schema#",
        "$id": "https://disc.gsfc.nasa.gov/schemas/model.json",
        "type": "object",
        "properties": {
            "title": {
                "type": "string",
                "required": true
            },
            "pubAuthors": {
                "type": "string",
                "required": true
            },
            "year": {
                "type": "number",
                "required": true,
                "minimum": 1900,
                "maximum": 2050,
                "minLength": 4,
                "maxLength": 4
            },
            "type": {
                "type": "string",
                "default": "Publication",
                "enum": ["Publication", "Conference", "Presentation"],
                "required": true
            },
            "conferenceName": {
                "type": "string",
                "required": false
            },
            "journalName": {
                "type": "string",
                "required": false
            },
            "pages": {
                "type": "string",
                "required": false
            },
            "doi": {
                "type": "string",
                "required": false
            },
            "link": {
                "type": "string",
                "required": true
            },
            "tags": {
                "type": "array",
                "title": "Tags",
                "items": {
                    "type": "string",
                    "enum": ["placeholder"]
                },
                "required": false
            },
            "datasets": {
                "type": "array",
                "title": "Related Datasets",
                "items": {
                    "type": "string",
                    "enum": ["placeholder"]
                },
                "required": false
            },
            "notes": {
                "type": "string",
                "title": "Revision Comments",
                "required": false
            }
        }
    },
    "layout": [
        "title",
        "pubAuthors",
        "year",
        "type",
        "conferenceName",
        "journalName",
        "pages",
        "doi",
        "link",
        {"key": "datasets", "type": "multi-select"},
        {"key": "tags", "type": "multi-select"},
        "notes"
    ],
    "templates" : [
		{
			"jsonpath" : "$.properties.tags.items.enum",
			"macro" : "fetch tags"
        },
        {
			"jsonpath" : "$.properties.datasets.items.enum",
			"macro" : "fetch datasets"
		}
	],
    "x-meditor": {
        "model": "Models",
        "modifiedOn": "$TODAY",
        "modifiedBy": "$AUTHOR",
        "states": [{
            "source": "Init",
            "target": "Draft",
            "modifiedOn": "$TODAY"
        }]
    }
}