{
    "titleProperty": "title",
    "name": "Howto",
    "description": "How-to",
    "category": "GESDISC",
    "workflow": "Edit-Review-Publish",
    "icon": {
        "name": "i-howto",
        "color": "#911eb4"
    },
    "schema": {
        "$schema": "http://json-schema.org/schema#",
        "$id": "https://disc.gsfc.nasa.gov/schemas/model.json",
        "type": "object",
        "properties": {
            "title": {
                "type": "string",
                "required": true
            },
            "abstract": {
                "type": "string",
                "required": true,
                "minLength": 10,
                "maxLength": 500
            },
            "groups": {
                "type": "array",
                "items": {
                    "type": "string",
                    "enum": [
                        "Worldview", "Giovanni", "ArcGIS", "R", "GrADS", "HDFView", "Panoply", "IDV",
                        "McIDAS-V", "Matlab", "IDL", "ENVI", "Python", "NCO", "CHANGE Viewer", "Excel",
                        "ncBrowse", "grid", "swath", "point", "shapefile", "vector", "read data", "visualization",
                        "format", "conversion", "spatial subsetting", "HDF4", "HDF5", "netCDF", "netCDF4", "HDF-EOS",
                        "HDF-EOS5", "GRIB", "Binary", "ASCII", "CVS", "GeoTiff"
                    ]
                },
                "required": false
            },
            "relatedHowto": {
                "type": "array",
                "title": "Related HowTos",
                "required": false,
                "items": {
                    "type": "string",
                    "enum": "placeholder"
                }
            },
            "example": {
                "type": "string",
                "title": "Example",
                "contentMediaType": "text/html",
                "required": false
            },
            "prereq": {
                "type": "string",
                "title": "Prerequisites",
                "contentMediaType": "text/html",
                "required": false
            },
            "procedure": {
                "type": "string",
                "title": "Procedure",
                "contentMediaType": "text/html",
                "required": true
            },
            "additionalInfo": {
                "type": "string",
                "title": "Additional Info",
                "contentMediaType": "text/html",
                "required": false
            },
            "tags": {
                "type": "array",
                "title": "Tags",
                "items": {
                    "type": "string",
                    "enum": ["placeholder"]
                },
                "required": false
            },
            "datasets": {
                "type": "array",
                "title": "Related Datasets",
                "items": {
                    "type": "string",
                    "enum": ["placeholder"]
                },
                "required": false
            },
            "notes": {
                "type": "string",
                "title": "Revision Comments",
                "required": false
            }
        }
    },
    "layout": [
        "title",
        "abstract", {
            "key": "example",
            "type": "ckeditor"
        }, {
            "key": "prereq",
            "type": "ckeditor"
        }, {
            "key": "procedure",
            "type": "ckeditor"
        }, {
            "key": "additionalInfo",
            "type": "ckeditor"
        },
        "relatedHowto",
        "datasets",
        "tags",
        "groups",
        "notes"
    ],
    "templates" : [
		{
			"jsonpath" : "$.properties.relatedHowto.items.enum",
			"macro" : "list Howto.title"
		},
		{
			"jsonpath" : "$.properties.tags.items.enum",
			"macro" : "fetch tags"
        },
        {
			"jsonpath" : "$.properties.datasets.items.enum",
			"macro" : "fetch datasets"
		}
	],
    "x-meditor": {
        "model": "Models",
        "modifiedOn": "$TODAY",
        "modifiedBy": "$AUTHOR",
        "states": [{
            "source": "Init",
            "target": "Draft",
            "modifiedOn": "$TODAY"
        }]
    }
}