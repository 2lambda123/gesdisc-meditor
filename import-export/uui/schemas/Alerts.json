{
    "titleProperty": "title",
    "name": "Alerts",
    "description": "Message to notify visitors of important information regarding data availability, site availability and performance issues.",
    "category": "GESDISC",
    "workflow": "Edit-Review-Publish",
    "icon": {
        "name": "fa-warning",
        "color": "#ffe119"
    },
    "schema": {
        "$schema": "http://json-schema.org/schema#",
        "$id": "https://disc.gsfc.nasa.gov/schemas/model.json",
        "type": "object",
        "properties": {
            "title": {
                "type": "string",
                "required": true
            },
            "expiration": {
                "type": "string",
                "format": "date-time",
                "required": true
            },
            "start": {
                "type": "string",
                "format": "date-time",
                "required": true
            },
            "severity": {
                "type": "string",
                "default": "normal",
                "enum": ["normal", "emergency"],
                "required": true
            },
            "body": {
                "type": "string",
                "contentMediaType": "text/html",
                "required": true
            },
            "tags": {
                "type": "array",
                "title": "Tags",
                "items": {
                    "type": "string",
                    "enum": ["placeholder"]
                },
                "required": false
            },
            "datasets": {
                "type": "array",
                "title": "Related Datasets",
                "items": {
                    "type": "string",
                    "enum": ["placeholder"]
                },
                "required": false
            },
            "notes": {
                "type": "string",
                "title": "Revision Comments",
                "required": false
            }
        }
    },
    "layout": [
        "title", {
            "key": "start",
            "type": "datetime",
            "format": "YYYY-MM-DD HH:mm:ssZ",
            "mode": "daytime"
        }, {
            "key": "expiration",
            "type": "datetime",
            "format": "YYYY-MM-DD HH:mm:ssZ",
            "mode": "daytime"
        },
        "severity", {
            "key": "body",
            "type": "ckeditor"
        },
        {"key": "datasets", "type": "multi-select"},
        {"key": "tags", "type": "multi-select"},
        "notes"
    ],
    "templates" : [
		{
			"jsonpath" : "$.properties.tags.items.enum",
			"macro" : "fetch tags"
        },
        {
			"jsonpath" : "$.properties.datasets.items.enum",
			"macro" : "fetch datasets"
		}
	],
    "x-meditor": {
        "model": "Models",
        "modifiedOn": "$TODAY",
        "modifiedBy": "$AUTHOR",
        "states": [{
            "source": "Init",
            "target": "Draft",
            "modifiedOn": "$TODAY"
        }]
    }
}