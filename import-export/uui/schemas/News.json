{
    "titleProperty": "title",
    "name": "News",
    "description": "News about all things relating to GES DISC including data releases and featured science articles.",
    "category": "GESDISC",
    "workflow": "Edit-Review-Publish",
    "icon": {
        "name": "fa-newspaper-o",
        "color": "#679EF5"
    },
    "schema": {
        "$schema": "http://json-schema.org/schema#",
        "$id": "https://disc.gsfc.nasa.gov/schemas/model.json",
        "type": "object",
        "properties": {
            "title": {
                "type": "string",
                "required": true
            },
            "abstract": {
                "type": "string",
                "title": "Description",
                "description": "Description for the news article",
                "required": true,
                "minLength": 10,
                "maxLength": 500
            },
            "type": {
                "type": "string",
                "default": "News",
                "enum": ["News", "Featured Article", "Data Release"],
                "required": true
            },
            "image": {
                "$id": "/properties/media",
                "title": "Media",
                "description": "Media (Images and Videos)",
                "$comment": "Media (Images and Videos)",
                "type": "string",
                "contentMediaType": "image/png",
                "contentEncoding": "base64",
                "required": true
            },
            "imageCaption": {
                "type": "string",
                "required": true
            },
            "body": {
                "type": "string",
                "contentMediaType": "text/html",
                "required": true
            },
            "additionalAuthors": {
                "type": "string",
                "required": false
            },
            "tags": {
                "type": "array",
                "title": "Tags",
                "items": {
                    "type": "string",
                    "enum": ["placeholder"]
                },
                "required": false
            },
            "datasets": {
                "type": "array",
                "title": "Related Datasets",
                "items": {
                    "type": "string",
                    "enum": ["placeholder"]
                },
                "required": false
            },
            "notes": {
                "type": "string",
                "title": "Revision Comments",
                "required": false
            }
        }
    },
    "layout": [
        "title",
        "abstract",
        "additionalAuthors", {
            "key": "body",
            "type": "ckeditor"
        },
        "type",
        "datasets",
        "tags", {
            "key": "image",
            "type": "image-upload"
        },
        "imageCaption",
        "notes"
    ],
    "templates" : [
		{
			"jsonpath" : "$.properties.tags.items.enum",
			"macro" : "fetch tags"
        },
        {
			"jsonpath" : "$.properties.datasets.items.enum",
			"macro" : "fetch datasets"
		}
	],
    "x-meditor": {
        "model": "Models",
        "modifiedOn": "$TODAY",
        "modifiedBy": "$AUTHOR",
        "states": [{
            "source": "Init",
            "target": "Draft",
            "modifiedOn": "$TODAY"
        }]
    }
}