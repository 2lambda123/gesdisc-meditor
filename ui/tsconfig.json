{
	"compilerOptions": {
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false,
		"noStrictGenericChecks": true,
		"lib": ["es2016", "dom"],
		"outDir": "../out-tsc/app",
		"target": "es5",
		"types": ["cypress"],
		"module": "commonjs",
		"rootDir": "./",
		"strict": true,
		"jsx"        : "react",
		"jsxFactory" : "h",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"exclude": ["bazel-out", "dist", "node_modules", "**/*/node_modules", "modules/schematics/src/*/files/**/*"],
	"compileOnSave": false,
	"buildOnSave": false,
	"atom": {
		"rewriteTsconfig": false
	},
	"bazelOptions": {
		"suppressTsconfigOverrideWarnings": true
	}
}
