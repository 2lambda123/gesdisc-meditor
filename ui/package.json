{
  "name": "meditor",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "build": "ng build --prod",
    "test": "jest",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "client": "ng serve --proxy-config server.conf.json --host 0.0.0.0",
    "server": "cd ../nodejs-server-server;nodemon index.js",
    "start": "npm-run-all -p client server"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.7",
    "@angular/cdk": "^6.4.7",
    "@angular/common": "^6.1.7",
    "@angular/compiler": "^6.1.7",
    "@angular/core": "^6.1.7",
    "@angular/flex-layout": "6.0.0-beta.15",
    "@angular/forms": "^6.1.7",
    "@angular/http": "^6.1.7",
    "@angular/material": "^6.4.7",
    "@angular/material-moment-adapter": "^6.4.7",
    "@angular/platform-browser": "^6.1.7",
    "@angular/platform-browser-dynamic": "^6.1.7",
    "@angular/platform-server": "^6.1.7",
    "@angular/router": "^6.1.7",
    "@ngxs/devtools-plugin": "^3.2.0",
    "@ngxs/router-plugin": "^3.2.0",
    "@ngxs/storage-plugin": "^3.2.0",
    "@ngxs/store": "^3.2.0",
    "@types/underscore": "^1.8.8",
    "angular-font-awesome": "^3.1.2",
    "angular-froala-wysiwyg": "^2.8.0",
    "angular2-json-schema-form": "git+https://git.earthdata.nasa.gov/scm/meditor/ngx-jsonsfe.git#angular-6-dist",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.5.5",
    "dotenv": "^5.0.1",
    "font-awesome": "^4.7.0",
    "hammerjs": "^2.0.8",
    "http-server": "^0.11.1",
    "ngx-json-viewer": "^2.3.1",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "opencollective": "^1.0.3",
    "rxjs": "6.2.2",
    "rxjs-compat": "6.2.2",
    "underscore": "^1.9.1",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.5.0",
    "@angular/cli": "^6.1.7",
    "@angular/compiler-cli": "^6.1.7",
    "@angular/language-service": "^6.1.7",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/jest": "^20.0.2",
    "@types/node": "^7.0.5",
    "codelyzer": "^4.2.0",
    "jasmine": "^3.1.0",
    "jasmine-core": "~2.6.2",
    "jasmine-marbles": "^0.3.1",
    "jasmine-spec-reporter": "~4.1.0",
    "jest": "^21.0.2",
    "jest-preset-angular": "^3.0.1",
    "jest-zone-patch": "^0.0.7",
    "karma": "^3.0.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.4.2",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "^5.4.1",
    "ts-node": "~3.0.4",
    "tsconfig-paths": "^3.1.3",
    "tslint": "~5.3.2",
    "typescript": "~2.7.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setup-jest.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "transform": {
      "^.+\\.(ts|js|html)$": "<rootDir>/node_modules/jest-preset-angular/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/app/**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "html",
      "json"
    ],
    "mapCoverage": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/modules/*.*/",
      "/libs/*.*/"
    ],
    "moduleNameMapper": {
      "^@ngrx/(?!db)(.*)": "<rootDir>/modules/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx)"
    ],
    "modulePathIgnorePatterns": [
      "dist"
    ]
  }
}
