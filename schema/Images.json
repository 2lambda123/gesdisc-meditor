{
    "titleProperty": "title",
    "name": "Image",
    "description": "Image model",
    "category": "GESDISC",
    "workflow": "Edit-Review-Publish",
    "icon": {
        "name": "fa-camera-retro",
        "color": "#f58231"
    },
    "schema": {
        "$schema": "http://json-schema.org/schema#",
        "$id": "https://disc.gsfc.nasa.gov/schemas/model.json",
        "type": "object",
        "properties": {
            "title": {
                "$id": "/properties/title",
                "title": "Image Title",
                "description": "Title for the image",
                "$comment": "Title for the image; may be used as text representation of the image",
                "type": "string",
                "examples": ["Daily Global Precipitation for 2018/01/01"],
                "required": true
            },
            "abstract": {
                "$id": "/properties/abstract",
                "title": "Image Description",
                "description": "Description for the image",
                "$comment": "Description of the image; might be used as a tooltip for the image in user interfaces.",
                "type": "string",
                "minLength": 10,
                "maxLength": 500,
                "examples": ["Daily Global Precipitation for 2018/01/01 using GPM data"],
                "required": true
            },
            "image": {
                "$id": "/properties/media",
                "title": "Media",
                "description": "Media (Images and Videos)",
                "$comment": "Media (Images and Videos)",
                "type": "string",
                "contentMediaType": "image/png",
                "contentEncoding": "base64",
                "required": true
            },
            "carousel": {
                "type": "boolean",
                "default": false,
                "required": true
            },
            "gallery": {
                "type": "boolean",
                "default": false,
                "required": true
            },
            "groups": {
                "type": "string",
                "enum": [""],
                "required": false
            },
            "tags": {
                "type": "string",
                "title": "Tags",
                "enum": ["ref"],
                "required": false
            },
            "datasets": {
                "type": "string",
                "title": "Related Datasets",
                "enum": ["ref"],
                "required": false
            },
            "notes": {
                "type": "string",
                "title": "Revision Comments",
                "required": false
            }
        },
        "required": ["title", "description", "image"],
        "additionalProperties": false
    },
    "layout": [
        "title",
        "abstract", {
            "key": "image",
            "type": "image-upload"
         },
         "carousel",
         "gallery",
         "datasets",
         "tags",
         "notes"
    ],
    "x-meditor": {
        "model": "Models",
        "modifiedOn": "$TODAY",
        "modifiedBy": "nobody",
        "states": [{
            "source": "Init",
            "target": "Draft",
            "modifiedOn": "$TODAY"
        }]
    }
}